<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 이동 가능한 색상 패널(여러 줄로 가로폭 축소) -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="8dp"
        android:background="@drawable/overlay_panel_bg_opaque"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- 1줄: 드래그/제목/색상/좌표 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dragHandle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="drag"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#111827" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="색상"
                android:textColor="#111827"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewSwatch"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:background="#FF000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="#000000"
                    android:textColor="#111827"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="(x,y)"
                    android:textColor="#374151"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 2줄: 통과/좌표입력/재시작/한번선택 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbPassThrough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:text="OFF"
                android:textColor="#111827"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btnCoordInput"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="coord_input"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="#111827" />

            <ImageButton
                android:id="@+id/btnRestart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="restart_capture"
                android:src="@android:drawable/ic_media_play"
                android:tint="#111827" />

            <ImageButton
                android:id="@+id/btnPickOnce"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="pick_once"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#111827" />
        </LinearLayout>

        <!-- 3줄: 복사/정지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCopy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="copy"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#111827" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="stop"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#DC2626" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

